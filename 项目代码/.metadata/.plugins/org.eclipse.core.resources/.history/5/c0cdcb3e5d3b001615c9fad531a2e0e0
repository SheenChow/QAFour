<body>
	<form>
		<input class="ascontent" />
		<input class="uid"/>
		<input class="fid"/>
		<button onclick="post();">提交</button>
	</form>
</body>
<script>
	function post(){
		$.ajax({
			type : "POST",
			url : "http://localhost:8080/QAFour/REST/Answer/createAAnswer",
			contentType : "application/json",
			dataType : "json",
			data : getUserInfo(),
			success : function(data) {
				alert(data)
			}
		});
		
		
	}
	function getAAnswer() {
		var json = {
			'ascontent': $('#ascontent')
			'UID' : $('#uid').val(),
			'FID' : $('#fid').val()
		};
		return JSON.stringify(json);
	}
</script>
</html>