<body>
	<form>
		<input id="ascontent" class="ascontent" /> <input id="uid"
			class="uid" /> <input id="fid" class="fid" />
		<button onclick="return post();">提交</button>
	</form>
</body>
<script>
	function post() {
		$.ajax({
			type : "POST",
			url : "http://localhost:8080/QAFour/REST/Answer/createAAnswer",
			contentType : "application/json",
			dataType : "json",
			data : getAAnswer(),
			success : function(data) {
				alert(data)
			}
		});
	}
	function getAAnswer() {
		var json = {
			'ascontent' : $('#ascontent'),
			'UID' : $('#uid').val(),
			'FID' : $('#fid').val()
		};
		return JSON.stringify(json);
	}
</script>
